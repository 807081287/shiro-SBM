    <sql id="Base_Column_List">
        id, name, description
    </sql>

    <select id="list" parameterType="org.tc.shiro.po.Command" resultType="org.tc.shiro.po.Command">
        select
        <include refid="Base_Column_List"/>
        from command a
        <where>
            <if test="name != null">
                and a.NAME = #{name}
            </if>
            <if test="description != null">
                and a.DESCRIPTION like '%' #{description} '%'
            </if>
        </where>
    </select>
